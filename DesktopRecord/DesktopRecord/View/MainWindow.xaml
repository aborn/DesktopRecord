<wd:Window
    x:Class="DesktopRecord.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:DesktopRecord.View"
    xmlns:vm="clr-namespace:DesktopRecord.ViewModel"
    xmlns:wd="https://github.com/WPFDevelopersOrg/WPFDevelopers"
    Title="屏幕录制"
    Width="525"
    Height="200"
    BorderBrush="{StaticResource WD.DangerSolidColorBrush}"
    BorderThickness="1"
    NoChrome="True"
    ResizeMode="CanMinimize"
    TitleBackground="{StaticResource WD.DangerSolidColorBrush}"
    TitleHeight="30"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <wd:Window.TitleBar>
        <Grid Height="40" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" MinWidth="30" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Margin="10,0"
                VerticalAlignment="Center"
                Foreground="{StaticResource WD.WindowForegroundColorBrush}"
                IsHitTestVisible="False"
                Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}, Path=Title}" />
            <Button
                x:Name="CloseButton"
                Grid.Column="2"
                Width="30"
                Height="30"
                HorizontalAlignment="Right"
                wd:ElementHelper.IsRound="True"
                Click="CloseButton_Click"
                Style="{StaticResource WD.NormalButton}"
                ToolTip="关闭">
                <wd:PathIcon
                    Width="10"
                    Height="10"
                    Foreground="{DynamicResource WD.WindowForegroundColorBrush}"
                    Kind="WindowClose" />
            </Button>
        </Grid>
    </wd:Window.TitleBar>
    <Grid>
        <TabControl>
            <TabItem Height="60" Header="ffmpeg 录制">
                <StackPanel Orientation="Vertical">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Margin="0,10,0,0">
                        <Button
                        Margin="0,0,5,0"
                        Command="{Binding MyStart}"
                        Content="{Binding MyTime}"
                        Style="{StaticResource WD.SuccessPrimaryButton}" />
                        <Button
                        Margin="5,0,0,0"
                        Command="{Binding MyStop}"
                        Content="停止录制"
                        Style="{StaticResource WD.DangerPrimaryButton}" />
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Horizontal" Margin="0,10,0,10">
                        <StackPanel VerticalAlignment="Center">
                            <Label>水印名：</Label>
                        </StackPanel>
                        <StackPanel VerticalAlignment="Center">
                            <TextBox Text="{Binding WaterMarker,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                     LostFocus="UIElement_OnLostFocus" Width="180" BorderThickness="1" BorderBrush="AliceBlue"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Height="35" Header="WindowsAPI 录制">
                <view:CommOptionView>
                    <view:CommOptionView.DataContext>
                        <vm:MainVM RecordEnums="WindowsAPI" />
                    </view:CommOptionView.DataContext>
                </view:CommOptionView>
            </TabItem>
            <TabItem Height="35" Header="Accord 录制">
                <view:CommOptionView>
                    <view:CommOptionView.DataContext>
                        <vm:MainVM RecordEnums="Accord" />
                    </view:CommOptionView.DataContext>
                </view:CommOptionView>
            </TabItem>
        </TabControl>
    </Grid>
</wd:Window>